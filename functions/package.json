{
  "name": "kairos-functions",
  "version": "1.0.0",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "firebase use develop && firebase deploy --only functions",
    "deploy:staging": "firebase use staging && firebase deploy --only functions",
    "deploy:prod": "firebase use production && firebase deploy --only functions",
    "deploy:all": "npm run deploy:dev && npm run deploy:staging && npm run deploy:prod",
    "logs": "firebase functions:log",
    "logs:dev": "firebase use develop && firebase functions:log",
    "logs:staging": "firebase use staging && firebase functions:log",
    "logs:prod": "firebase use production && firebase functions:log",
    "genkit:start": "genkit start",
    "test": "mocha --require ts-node/register 'src/test/**/*.test.ts' --timeout 10000",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "firebase-functions": "^5.0.0",
    "firebase-admin": "^12.0.0",
    "genkit": "^1.0.0",
    "@genkit-ai/google-genai": "^1.0.0",
    "@genkit-ai/firebase": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "chai": "^4.3.0",
    "ts-node": "^10.0.0",
    "@types/mocha": "^10.0.0",
    "@types/chai": "^4.3.0",
    "firebase-functions-test": "^3.0.0"
  }
}
